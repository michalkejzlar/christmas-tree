<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical">

	<FrameLayout android:id="@+id/videoLayout"
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:background="@android:color/black">

		<com.google.android.exoplayer2.ui.SimpleExoPlayerView
				android:id="@+id/player_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				app:use_texture_view="true"
				app:use_controller="false"/>

		<TextView android:id="@+id/projectTextView"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  style="@style/ClickableTextViewStyle"
				  android:layout_gravity="bottom"
				  android:gravity="center_vertical"
				  android:padding="@dimen/activity_horizontal_margin"
				  android:text="@string/project_label_hourly"
				  android:textColor="@android:color/white"
				  android:background="#aa000000"
				  android:drawableRight="@drawable/ic_keyboard_arrow_down_white_24dp"
				  android:drawableEnd="@drawable/ic_keyboard_arrow_down_white_24dp"
				  android:minHeight="80dp"/>

	</FrameLayout>

	<TextView
			android:id="@+id/projectName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="6dp"
			android:fontFamily="sans-serif-black"
			tools:text="Adopce nablízko"
			android:textColor="#444"
			android:textSize="30sp"/>

	<TextView
			android:id="@+id/projectDesc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="12dp"
			tools:text="Tento projekt působí v rámci rozvojové pomoci. Jeho účelem je pomoci ohroženým a znevýhodněným dětem a mládeži ve světě."
			android:textColor="#444"/>

	<View android:layout_width="match_parent"
		  android:layout_height="1px"
		  android:paddingLeft="@dimen/activity_horizontal_margin"
		  android:paddingRight="@dimen/activity_horizontal_margin"
		  android:background="@color/background_light"/>

	<TextView
			android:id="@+id/companyName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="6dp"
			android:fontFamily="sans-serif-black"
			tools:text="Salesiánská asociace Dona Boska, o.s."
			android:textColor="#444"
			android:textSize="22sp"/>

	<TextView
			android:id="@+id/companyDesc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="12dp"
			tools:text="Tento projekt působí v rámci rozvojové pomoci. Jeho účelem je pomoci ohroženým a znevýhodněným dětem a mládeži ve světě."
			android:textColor="#444"/>


</LinearLayout>